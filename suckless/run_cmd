#!/bin/sh

case $1 in
    volume_up)
        pactl set-sink-volume @DEFAULT_SINK@ +2%
        ;;
    volume_down)
        pactl set-sink-volume @DEFAULT_SINK@ -2%
        ;;
    launcher)
        j4-dmenu-desktop --dmenu "bemenu -i --fn 'FiraCode 18'"
        ;;
    web_browser)
        # firefox --new-window
        brave-browser --new-window
        ;;
    file_manager)
        nautilus --new-window
        ;;
    terminal_file_manager)
        wezterm start -- ranger
        ;;
    terminal)
        wezterm
        ;;
    lock)
        swaylock --color=333333
        ;;
    reset_kb_settings)
        xset r rate 200 40
        ;;
esac
